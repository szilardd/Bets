    <!-- Deny unauthenticated users to see the elmah.axd -->
    <location path="admin">
        <system.web>
            <authorization>
                <allow users="admin" />
                <deny users="*" />
            </authorization>
        </system.web>
    </location>
    <!-- Deny non-admin users to see the admin interface -->
    <location path="DD">
        <system.web>
            <authorization>
                <allow users="admin" />
                <deny users="*" />
            </authorization>
        </system.web>
    </location>
    <elmah>
        <errorMail configSource="Settings\elmah.config" />
        <errorLog type="Elmah.SqlErrorLog, Elmah" connectionStringName="Bets" />
    </elmah>
    <system.net>
        <mailSettings>
            <smtp configSource="Settings\smtp.config" />
        </mailSettings>
    </system.net>
    <entityFramework>
        <defaultConnectionFactory type="System.Data.Entity.Infrastructure.SqlConnectionFactory, EntityFramework" />
        <providers>
            <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
